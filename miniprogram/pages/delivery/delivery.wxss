/* pages/delivery/delivery.wxss */
.container {
  padding: 20px;
}

.list-item {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  margin-bottom: 10px;
  background-color: #f9f9f9;
}

.header {
  font-weight: bold;
  margin-bottom: 10px;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 5px;
}

.label {
  color: #666;
}

.value {
  color: #333;
  font-weight: bold;
}

.tabs-header{
  display: flex;
  align-self:stretch;
  justify-content: space-around;
  margin-bottom: 10px;
}
.tabs-header-item-normal{
  text-align: center;
  line-height: 43px; 
  flex-grow: 1;
}
.tabs-header-item-selected{
  text-align: center;
  line-height: 43px; 
  border-bottom: 2px #0052D9 solid; 
  color: #0052D9;
  flex-grow: 1;
}

