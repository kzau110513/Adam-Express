/* pages/submit_order/submit_order.wxss */
.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 20px;
  box-sizing: border-box;
}

.grid-header, .grid-row {
  display: grid;
  grid-template-columns: 2fr 2fr 1fr 2fr;
  gap: 10px;
  width: 100%;
  padding: 10px 0;
  border-bottom: 1px solid #ddd;
}

.header-item, .grid-item {
  text-align: left;
  font-size: 14px;
  word-break: break-all;
}

.summary {
  display: flex;
  justify-content: space-between;
  margin-top: 20px;
  padding: 10px;
  background-color: #f9f9f9;
  border-radius: 5px;
}

.summary-item {
  font-size: 16px;
  font-weight: bold;
}
